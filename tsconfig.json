{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
